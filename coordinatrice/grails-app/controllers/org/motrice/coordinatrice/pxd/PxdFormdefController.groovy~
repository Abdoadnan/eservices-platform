package org.motrice.coordinatrice.pxd

import org.springframework.dao.DataIntegrityViolationException

class PxdFormdefController {

    static allowedMethods = [save: "POST", update: "POST", delete: "POST"]

    def index() {
        redirect(action: "list", params: params)
    }

    def list(Integer max) {
        params.max = Math.min(max ?: 10, 100)
        [pxdFormdefInstList: PxdFormdef.list(params), pxdFormdefInstTotal: PxdFormdef.count()]
    }

    def create() {
        [pxdFormdefInst: new PxdFormdef(params)]
    }

    def save() {
        def pxdFormdefInst = new PxdFormdef(params)
        if (!pxdFormdefInst.save(flush: true)) {
            render(view: "create", model: [pxdFormdefInst: pxdFormdefInst])
            return
        }

        flash.message = message(code: 'default.created.message', args: [message(code: 'pxdFormdef.label', default: 'PxdFormdef'), pxdFormdefInst.id])
        redirect(action: "show", id: pxdFormdefInst.id)
    }

    def show(Long id) {
        def pxdFormdefInst = PxdFormdef.get(id)
        if (!pxdFormdefInst) {
            flash.message = message(code: 'default.not.found.message', args: [message(code: 'pxdFormdef.label', default: 'PxdFormdef'), id])
            redirect(action: "list")
            return
        }

        [pxdFormdefInst: pxdFormdefInst]
    }

    def edit(Long id) {
        def pxdFormdefInst = PxdFormdef.get(id)
        if (!pxdFormdefInst) {
            flash.message = message(code: 'default.not.found.message', args: [message(code: 'pxdFormdef.label', default: 'PxdFormdef'), id])
            redirect(action: "list")
            return
        }

        [pxdFormdefInst: pxdFormdefInst]
    }

    def update(Long id, Long version) {
        def pxdFormdefInst = PxdFormdef.get(id)
        if (!pxdFormdefInst) {
            flash.message = message(code: 'default.not.found.message', args: [message(code: 'pxdFormdef.label', default: 'PxdFormdef'), id])
            redirect(action: "list")
            return
        }

        if (version != null) {
            if (pxdFormdefInst.version > version) {
                pxdFormdefInst.errors.rejectValue("version", "default.optimistic.locking.failure",
                          [message(code: 'pxdFormdef.label', default: 'PxdFormdef')] as Object[],
                          "Another user has updated this PxdFormdef while you were editing")
                render(view: "edit", model: [pxdFormdefInst: pxdFormdefInst])
                return
            }
        }

        pxdFormdefInst.properties = params

        if (!pxdFormdefInst.save(flush: true)) {
            render(view: "edit", model: [pxdFormdefInst: pxdFormdefInst])
            return
        }

        flash.message = message(code: 'default.updated.message', args: [message(code: 'pxdFormdef.label', default: 'PxdFormdef'), pxdFormdefInst.id])
        redirect(action: "show", id: pxdFormdefInst.id)
    }

    def delete(Long id) {
        def pxdFormdefInst = PxdFormdef.get(id)
        if (!pxdFormdefInst) {
            flash.message = message(code: 'default.not.found.message', args: [message(code: 'pxdFormdef.label', default: 'PxdFormdef'), id])
            redirect(action: "list")
            return
        }

        try {
            pxdFormdefInst.delete(flush: true)
            flash.message = message(code: 'default.deleted.message', args: [message(code: 'pxdFormdef.label', default: 'PxdFormdef'), id])
            redirect(action: "list")
        }
        catch (DataIntegrityViolationException e) {
            flash.message = message(code: 'default.not.deleted.message', args: [message(code: 'pxdFormdef.label', default: 'PxdFormdef'), id])
            redirect(action: "show", id: id)
        }
    }
}
